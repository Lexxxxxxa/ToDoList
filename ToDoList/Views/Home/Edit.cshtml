@model ToDoList.Models.Task

<h2>Редагувати завдання</h2>

<form asp-action="Edit" method="post">
    <div class="form-group">
        <label asp-for="Title">Назва:</label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="IsDone">Статус:</label>
        <input asp-for="IsDone" class="form-check" type="checkbox" />
        <span asp-validation-for="IsDone" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Зберегти</button>
</form>