@model IEnumerable<ToDoList.Models.Task>

<h2>Список завдань</h2>

<table class="table">
    <thead>
        <tr>
            <th>Назва</th>
            <th>Статус</th>
            <th>Дата створення</th>
            <th>Дії</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var task in Model)
        {
            <tr>
                <td>@task.Title</td>
                <td>@(task.IsDone ? "Виконано" : "Не виконано")</td>
                <td>@task.CreatedAt.ToString("yyyy-MM-dd HH:mm:ss")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@task.Id">Редагувати</a> |
                    @*<a asp-action="Delete" asp-route-id="@task.Id">Видалити</a>*@
                </td>
            </tr>
        }
    </tbody>
</table>
